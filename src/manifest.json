{

  "manifest_version": 2,
  "name": "NextShare",
  "version": "1.0",

  "description": "Share shit with friends",

  "icons": {
    "48": "imgs/icons/border-48.png"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "<all_urls>",
    "webNavigation",
    "storage"
  ],

  "content_security_policy": "script-src 'self'; object-src 'self'",

  "browser_action": {
    "default_icon": "imgs/icons/beasts-32.png",
    "default_title": "NextShare",
    "default_popup": "popup/app.html"
  },

  "web_accessible_resources": [
    "imgs/friends/Josh.jpg",
    "imgs/friends/David.jpg",
    "imgs/friends/Cayla.jpg"
  ],

  "background": {
    "scripts": ["background.js"]
  }

}